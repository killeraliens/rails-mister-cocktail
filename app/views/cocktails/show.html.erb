<div class="container mt-3" id="show-card">
  <h1><%= @cocktail.name %></h1>
  <div class="card-bg">
    <div class="card-body">
      <%= cl_image_tag @cocktail.image, class: "card-img-top" %>
      <h5 >Ingredients</h5>
      <ul>
      <%@cocktail.doses.each do |dose| %>
        <li><%= dose.ingredient.name %> - <%= dose.description %><%= link_to "delete", dose_path(dose), method: :delete, style: "margin: 4px ", class: "" %></li>
      <% end %>
      </ul>
      <%= link_to "create new dose", new_cocktail_dose_path(@cocktail), class: "btn btn-ghost mt-3", style: "width: 100%"; %>
      <%= simple_form_for @cocktail, html: { class: "mt-3"} do |f| %>
        <%= f.input :image, label: 'Add and image for your poke-mocktail' %>
        <%= f.input :image_cache, as: :hidden %>
        <%= f.submit "add image", class: "btn btn-ghost mt-3", style: "width: 100%"; %>
      <% end %>

    </div>
  </div>
  <%= link_to "back to cocktails", cocktails_path,class: "btn btn-ghost mt-3" %>
</div>

