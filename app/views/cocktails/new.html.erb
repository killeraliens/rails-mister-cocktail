<div class="container mt-3">
  <h1>Add A Cocktail</h1>


  <div class="card-bg p-2">
    <div class="card-body">
      <%= simple_form_for [@cocktail] do |f| %>
        <%= f.input :name %>
        <%= f.input :image %>
        <%= f.input :image_cache, as: :hidden %>
        <%= f.submit "Add Cocktail",  class: "btn btn-ghost mt-3", style: "width: 100%" %>
      <% end %>

    </div>
  </div>
  <%= link_to "cancel", cocktails_path, class: "btn btn-ghost mt-3" %>

</div>
