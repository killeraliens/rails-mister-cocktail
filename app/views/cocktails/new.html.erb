<div class="container">
  <h1>Add A Cocktail</h1>

  <%= simple_form_for [@cocktail] do |f| %>
    <%= f.input :name %>
    <%= f.input :image %>
    <%= f.input :image_cache, as: :hidden %>
    <%= f.submit "Add Cocktail", class: "btn btn-primary", style: "width:100%"; %>
  <% end %>
  <%= link_to "cancel", cocktails_path %>
</div>
