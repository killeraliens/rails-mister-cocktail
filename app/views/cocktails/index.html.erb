<div class="banner">
  <%= cl_image_tag("https://images.unsplash.com/photo-1539788292313-547a2c372229?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80") %>
</div>



<div class="container">
<h1>Catchem'all Cocktails</h1>
  <% @cocktails.each do |cocktail| %>
    <div class="card" >
      <%= cl_image_tag cocktail.image, class: "card-img-top" %>
      <div class="card-body">
        <h5 class="card-title"><%= cocktail.name %></h5>
        <%= link_to "see details", cocktail_path(cocktail) %>
      </div>
    </div>
  <% end %>
  <%= link_to "Add Cocktail", new_cocktail_path, class: "btn btn-primary", style: "width: 100%"%>
</div>


